{% extends 'baseBack.html.twig' %}

{% block title %}Créer un nouveau Post{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-primary">Créer un nouveau Post</h1>

    <div class="card shadow p-4">
        {{ form_start(form, {'attr': {'class': 'form-group'}}) }}

        <div class="mb-3">
            {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre du post'}}) }}
            <div class="text-danger">{{ form_errors(form.title) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le contenu'}}) }}
            <div class="text-danger">{{ form_errors(form.content) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.publishedAt, 'Date de publication', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.publishedAt, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.publishedAt) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.picture, 'Image', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.picture, {'attr': {'class': 'form-control', 'type': 'file'}}) }}
            <div class="text-danger">{{ form_errors(form.picture) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.category) }}</div>
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>

    <div class="mt-3">
        <a href="{{ path('app_post_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
{% endblock %}
