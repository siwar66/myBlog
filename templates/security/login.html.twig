{% extends 'baseFront.html.twig' %}

{% block title %}Connexion{% endblock %}



{% block body %}
<div class="container-fluid page-header mb-5 p-0" 
     style="
        background-image: url('{{ asset('uploads/images/login.jfif') }}'); 
        background-size: cover; 
        background-position: center center; 
        height: 300px; 
        overflow: hidden;">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item text-white active" aria-current="page">Connectez-vous Ã  MonBlog.com</li>
                </ol>
            </nav>
        </div>
    </div>
</div>



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <h1 class="text-center mb-4">Se connecter</h1>
            
            {% if error %}
                <div class="alert alert-danger text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" class="g-3">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-floating mb-3">
                    <input type="text" id="username" name="_username" class="form-control" placeholder="Email" value="{{ last_username }}" required>
                    <label for="username">Email</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required>
                    <label for="password">Mot de passe</label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </form>
            
            <div class="text-center mt-3">
                <p>Pas encore de compte ? <a href="{{ path('app_register') }}" class="text-primary">Inscrivez-vous</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
